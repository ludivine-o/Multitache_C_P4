#ifndef THREADS_H_
#define THREADS_H_


typedef struct {
	int RValue;
	int GValue;
	int BValue;
} Color;

static Color Black = { 0, 0, 0 }, Blue = { 0, 0, 255 }, Red = { 255, 0, 0 }, White = {
		255, 255, 255 }, Purple = { 255, 0, 255 }, Yellow = { 255, 255, 0 };

Color matrix[7][7];
Color actual_matrix[7][7];



/*************Fonction threads**********************/
void *read_button(void*arg); 													// lit le contenu du retour de read button
void *application(void*arg);													// execute la demande transmise par read_button
void *display(void*arg);														// affiche la demande transmise par l'app





#endif /* THREADS_H_ */
